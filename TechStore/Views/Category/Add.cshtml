@model Category
<form action="/" method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h4 class="text-primary">Add Brand</h4> 
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0"></label>
			<input asp-for="Name" class="form-control"/>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for = "DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-outline-primary form-control" >Add</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
					Back
				</a>
			</div>
		</div>
	</div>  
</form>