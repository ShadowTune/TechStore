@model List<Product>
<partial name = "_Notification"></partial>
<div class="container">
	<div class="row py-4">
		<div class="col-6">
			Product List
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="UpdateAdd" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add Product
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Brand Name</th>
			<th>Series</th>
			<th>Model</th>
			<th>Regular Price</th>
			<th>Discount Price</th>
			<th>Stock Orders</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>@obj.Brand</td>
				<td>@obj.Series</td>
				<td>@obj.Model</td>
				<td>@obj.RegularPrice</td>
				<td>@obj.DiscountPrice</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Product" asp-action="UpdateAdd" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
							<i class="bi bi-trash3-fill"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>