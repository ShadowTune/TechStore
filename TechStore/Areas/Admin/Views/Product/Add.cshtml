@model Product
<div class="card-shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Add Brand</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3">
				<div class="form-floating py-2 col-12">
					<input asp-for="ProductId" class="form-control border-0 shadow" />
					<label asp-for="ProductId" class="ms-2"></label>
					<span asp-validation-for="ProductId" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Brand" class="form-control border-0 shadow" />
					<label asp-for="Brand" class="ms-2"></label>
					<span asp-validation-for="Brand" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Series" class="form-control border-0 shadow" />
					<label asp-for="Series" class="ms-2"></label>
					<span asp-validation-for="Series" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Model" class="form-control border-0 shadow" />
					<label asp-for="Model" class="ms-2"></label>
					<span asp-validation-for="Model" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="RegularPrice" class="form-control border-0 shadow" />
					<label asp-for="RegularPrice" class="ms-2"></label>
					<span asp-validation-for="RegularPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DiscountPrice" class="form-control border-0 shadow" />
					<label asp-for="DiscountPrice" class="ms-2"></label>
					<span asp-validation-for="DiscountPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" class="form-control border-0 shadow" />
					<label asp-for="DisplayOrder" class="ms-2"></label>
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Add</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-primary border form-control">Back</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}